<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="3"
        android:layout_height="60dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView1"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_url="https://lottie.host/de008dce-821a-4bc5-b231-ec0135ce2f92/NzQhikfved.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView2"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_url="https://lottie.host/93f7d663-c77e-4fb3-aef9-82169e8f1c7f/nmtIA2Kr6m.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView3"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_url="https://lottie.host/cd1be01c-dda1-493c-880a-1690ff0c900d/OszDusBNRc.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/line1"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_gravity="center"
                    android:layout_width="400dp"
                    android:layout_height="300dp"/>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btn1"
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="BACK"
                        android:background="@drawable/shape"/>
                    <Button
                        android:id="@+id/btn2"
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="BACK"
                        android:background="@drawable/shape"/>

                </LinearLayout>

                 <ImageView
                     android:id="@+id/img2"
                     android:layout_gravity="center"
                     android:layout_width="400dp"
                     android:layout_height="300dp"/>

                    <Button
                        android:id="@+id/btn3"
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="ANIMATION"
                        android:background="@drawable/shape"/>

                <ImageView
                    android:id="@+id/img11"
                    android:layout_gravity="center"
                    android:layout_width="400dp"
                    android:layout_height="300dp"/>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btn11"
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="BACK"
                        android:background="@drawable/shape"/>
                    <Button
                        android:id="@+id/btn22"
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="BACK"
                        android:background="@drawable/shape"/>

                </LinearLayout>
                <ImageView
                    android:id="@+id/img22"
                    android:layout_gravity="center"
                    android:layout_width="400dp"
                    android:layout_height="300dp"/>

                <Button
                    android:id="@+id/btn33"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="ANIMATION"
                    android:background="@drawable/shape"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>



</RelativeLayout>